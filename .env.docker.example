# ===========================
# APPLICATION CONFIGURATION
# ===========================
APP_NAME="Wizi Learn"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_KEY=

# ===========================
# DATABASE CONFIGURATION
# ===========================
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=wizi_learn
DB_USERNAME=wizi
DB_PASSWORD=password

# ===========================
# CACHE & SESSION CONFIGURATION
# ===========================
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# ===========================
# REDIS CONFIGURATION
# ===========================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null
REDIS_DB=0

# ===========================
# MAIL CONFIGURATION
# ===========================
MAIL_DRIVER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@wizi-learn.com
MAIL_FROM_NAME="Wizi Learn"

# ===========================
# JWT AUTHENTICATION
# ===========================
JWT_SECRET=
JWT_ALGORITHM=HS256
JWT_TTL=1440

# ===========================
# API PLATFORM
# ===========================
API_PLATFORM_TITLE="Wizi Learn API"
API_PLATFORM_DESCRIPTION="API REST for Wizi Learn Platform"
API_PLATFORM_VERSION="1.0.0"

# ===========================
# DOCKER SPECIFIC
# ===========================
RUN_MIGRATIONS=true
RUN_SEEDS=false

# ===========================
# LOGGING
# ===========================
LOG_CHANNEL=stack
LOG_LEVEL=debug
